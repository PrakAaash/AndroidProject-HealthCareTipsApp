<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionTips">

    <RelativeLayout
        android:id="@+id/nutritionTips_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/nutrition_tips"
            app:titleTextColor="@color/colorWhite"
            app:titleMarginStart="55dp"
            android:background="@color/colorToolbarBackground"/>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="43dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/backArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nutritionTips_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="25dp">

            <TextView
                android:id="@+id/generalNutritionTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Nutrition Tips"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/nutritionTips_Children"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Tips Needed for Children"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/nutritionTips_Men"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Tips Needed for Men"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/nutritionTips_Women"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Tips Needed for Women"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/nutritionTips_Hair"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Tips for Healthy Hair"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/nutritionTips_Skin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Tips for Healthy Skin"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/weightGainTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Weight Gain"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

<!--            <TextView-->
<!--                android:id="@+id/bloodPressureTips"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="70dp"-->
<!--                android:text="Nutrition Tips for High Blood Pressure"-->
<!--                android:textSize="19sp"-->
<!--                android:textColor="@color/colorBlack"-->
<!--                android:background="@drawable/custom_text_view"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginTop="10dp"/>-->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>