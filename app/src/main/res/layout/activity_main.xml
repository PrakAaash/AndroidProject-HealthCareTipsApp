<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbarBackground"
        app:theme="@style/ToolbarTheme">

    </androidx.appcompat.widget.Toolbar>

    <ViewFlipper
        android:id="@+id/view_Flipper"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_below="@+id/toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_Flipper"
        android:background="@color/colorLightPurple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="14dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/health_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Tips"
                android:textSize="19sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/custom_text_field"
                android:gravity="center"
                android:padding="26dp"/>

            <TextView
                android:id="@+id/nutrition_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutrition Tips"
                android:textSize="19sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/custom_text_field"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="26dp"/>

<!--            <TextView-->
<!--                android:id="@+id/exercises_tips"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Exercises"-->
<!--                android:textSize="18sp"-->
<!--                android:textColor="@color/colorWhite"-->
<!--                android:background="@drawable/custom_text_field"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:gravity="center"-->
<!--                android:padding="26dp"/>-->

            </LinearLayout>

    </ScrollView>

</RelativeLayout>