<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HealthTips">

    <RelativeLayout
        android:id="@+id/healthTips_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/health_tips"
            app:titleTextColor="@color/colorWhite"
            app:titleMarginStart="55dp"
            android:background="@color/colorToolbarBackground"/>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="43dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/backArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/healthTips_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="25dp">

            <TextView
                android:id="@+id/generalHealthTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Health Tips"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/menHealthTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Men Health Tips"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/womenHealthTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Women Health Tips"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/tipsHeart"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Healthy Heart"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/stressTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Relieve Stress"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/seasonTips"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Seasonal Tips"
                android:textSize="19sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_text_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="7dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>




